<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.cometd</groupId>
		<artifactId>cometd-project
		</artifactId>
		<version>1.0.beta9-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cometd</groupId>
	<artifactId>cometd-demo</artifactId>
	<packaging>war</packaging>
	<name>Cometd :: Demo </name>

	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<dependentWarExcludes>WEB-INF/web.xml
					</dependentWarExcludes>
					<overlays>
					        <overlay/>
						<overlay>
							<groupId>org.cometd.javascript</groupId>
							<artifactId>cometd-javascript-dojo</artifactId>
							<excludes>
								<exclude>META-INF/**</exclude>
								<exclude>WEB-INF/web.xml</exclude>
							</excludes>
						</overlay>
						<overlay>
						    <groupId>org.cometd.javascript</groupId>
						    <artifactId>cometd-javascript-jquery</artifactId>
						</overlay>
						<overlay>
							<groupId>org.cometd.examples</groupId>
							<artifactId>cometd-examples-dojo</artifactId>
						</overlay>
						<overlay>
							<groupId>org.cometd.examples</groupId>
							<artifactId>cometd-examples-jquery</artifactId>
						</overlay>
						<overlay>
							<groupId>org.cometd.examples</groupId>
							<artifactId>cometd-examples-java</artifactId>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>${jetty-maven-plugin-version}
				</version>
				<configuration>
					<scanIntervalSeconds>1</scanIntervalSeconds>
					<contextPath>/</contextPath>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.cometd.javascript</groupId>
			<artifactId>cometd-javascript-dojo</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
		    <groupId>org.cometd.javascript</groupId>
		    <artifactId>cometd-javascript-jquery</artifactId>
		    <version>${project.version}</version>
		    <type>war</type>
		</dependency>
		<dependency>
			<groupId>org.cometd.examples</groupId>
			<artifactId>cometd-examples-dojo</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.cometd.examples</groupId>
			<artifactId>cometd-examples-jquery</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.cometd.examples</groupId>
			<artifactId>cometd-examples-java</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>

</project>
